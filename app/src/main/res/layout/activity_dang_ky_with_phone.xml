<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars = "vertical"
    tools:context=".DangNhapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:scrollbars="vertical">
        <TextView
            android:id="@+id/txtViewDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng Nhập"
            android:textColor="@color/cam"
            android:textSize="26dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="49dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/cam"
                android:textColor="@color/cam"
                android:textColorHint="@color/cam"
                android:ems="10"
                android:gravity="center"
                android:inputType=""
                android:maxLength="10"
                android:text="+84"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:counterEnabled="true"
                app:counterMaxLength="9"
                app:hintEnabled="true"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Medium">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cam"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Số điện thoại"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="9"
                    android:text=""
                    android:textColor="@color/cam"
                    android:textColorHint="@color/cam"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtspace"
            android:layout_width="match_parent"
            android:layout_height="53dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#F05123"
                android:text="Lấy mã OTP"
                android:textColor="#000000" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/cam"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/txtspace2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="157dp"
            android:gravity="center_horizontal"
            android:text="@string/facebookLink"
            android:textAlignment="center"
            android:backgroundTint="@color/cam"
            android:textColor="@color/cam"
            android:textColorHint="@color/cam"/>

        <TextView
            android:id="@+id/gotoDangNhap"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:text="Đã đăng ký ? Đăng nhập"
            android:textColor="#000000"
            android:textSize="18sp" />


    </LinearLayout>


</ScrollView>